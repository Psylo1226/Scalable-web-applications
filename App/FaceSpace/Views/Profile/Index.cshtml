@model FaceSpace.Models.UserProfileViewModel

<div class="container mt-4">
    <!-- Nagłówek profilu -->
    <div class="d-flex align-items-center justify-content-between profile-header">
        <div class="d-flex align-items-center">
            <img src="@Model.SelectedAvatar" alt="Profile Avatar" class="rounded-circle border" style="width: 100px; height: 100px;" />
            <div class="ms-3">
                <h2>@Model.Name</h2>
                <p class="text-muted">@Model.Description</p>
            </div>
        </div>
        <button class="btn btn-primary">Edit Profile</button>
    </div>

    <hr />

    <!-- Zakładki -->
    <div class="profile-tabs mt-4">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" href="#">Timeline</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Friends</a>
            </li>
        </ul>
    </div>

    <!-- Lista postów -->
    <div id="posts" class="mt-4">
        <!-- Pojedynczy post -->
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                <span class="fw-bold">John Doe</span>
                <small class="text-muted">5 minutes ago</small>
            </div>
            <div class="card-body">
                <p class="card-text">This is a sample post content. It can contain any text or links.</p>
                <div class="d-flex justify-content-between align-items-center">
                    <button class="btn btn-outline-primary btn-sm">Like</button>
                    <small class="text-muted">10 likes</small>
                </div>
            </div>
            <div class="card-footer">
                <h6 class="fw-bold mb-3">Comments</h6>
                <div class="comments mb-3">
                    <div class="comment mb-2">
                        <strong>Jane Smith:</strong> This is a great post!
                    </div>
                    <div class="comment mb-2">
                        <strong>Mark Johnson:</strong> Totally agree with you!
                    </div>
                </div>
                <form class="mt-3">
                    <div class="input-group">
                        <input type="text" class="form-control" id="commentContent" placeholder="Write a comment...">
                        <button type="submit" class="btn btn-primary">Comment</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
