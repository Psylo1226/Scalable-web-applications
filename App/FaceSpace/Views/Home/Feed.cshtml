@page
@model FaceSpace.Views.Home.FeedModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Jeśli korzystasz z układu
}

<div class="container mt-4">
    <h1 class="mb-4 text-center">Post Feed</h1>

    <!-- Dodaj nowy post -->
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <h5 class="card-title">Create a Post</h5>
            <form>
                <div class="mb-3">
                    <label for="postContent" class="form-label">What's on your mind?</label>
                    <textarea class="form-control" id="postContent" rows="3" placeholder="Write something..."></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Post</button>
            </form>
        </div>
    </div>

    <!-- Lista postów -->
    <div id="posts">
        <!-- Pojedynczy post -->
        <div class="card mb-4 shadow-sm">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span class="fw-bold">John Doe</span>
                <small class="text-muted">5 minutes ago</small>
            </div>
            <div class="card-body">
                <p class="card-text">This is a sample post content. It can contain any text or links.</p>
                <div class="d-flex justify-content-between align-items-center">
                    <button class="btn btn-outline-primary btn-sm">Like</button>
                    <small class="text-muted">10 likes</small>
                </div>
            </div>
        </div>

        <!-- Kolejny post -->
        <div class="card mb-4 shadow-sm">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span class="fw-bold">Jane Smith</span>
                <small class="text-muted">10 minutes ago</small>
            </div>
            <div class="card-body">
                <p class="card-text">Another example post. Bootstrap makes this easy and responsive!</p>
                <div class="d-flex justify-content-between align-items-center">
                    <button class="btn btn-outline-primary btn-sm">Like</button>
                    <small class="text-muted">7 likes</small>
                </div>
            </div>
        </div>
    </div>
</div>

