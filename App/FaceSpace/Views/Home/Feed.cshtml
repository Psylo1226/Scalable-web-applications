@page
@model FaceSpace.Views.Home.FeedModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Jeśli korzystasz z układu
}

<div class="container-md mt-5">
    <h1 class="text-center mb-4">Post Feed</h1>

    <!-- Dodaj nowy post -->
    <div class="card mb-5 shadow-sm">
        <div class="card-body">
            <h5 class="card-title text-center">Create a Post</h5>
            <form>
                <div class="mb-3">
                    <textarea class="form-control" id="postContent" rows="3" placeholder="What's on your mind?"></textarea>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Post</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Lista postów -->
    <div id="posts">
        <!-- Pojedynczy post -->
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                <span class="fw-bold">John Doe</span>
                <small class="text-muted">5 minutes ago</small>
            </div>
            <div class="card-body">
                <p class="card-text">This is a sample post content. It can contain any text or links.</p>
                <div class="d-flex justify-content-between align-items-center">
                    <button class="btn btn-outline-primary btn-sm">Like</button>
                    <small class="text-muted">10 likes</small>
                </div>
            </div>
            <div class="card-footer">
                <h6 class="fw-bold mb-3">Comments</h6>
                <div class="comments mb-3">
                    <div class="comment mb-2">
                        <strong>Jane Smith:</strong> This is a great post!
                    </div>
                    <div class="comment mb-2">
                        <strong>Mark Johnson:</strong> Totally agree with you!
                    </div>
                </div>
                <form class="mt-3">
                    <div class="input-group">
                        <input type="text" class="form-control" id="commentContent" placeholder="Write a comment..." style="margin-bottom: 10px;">
                        <button type="submit" class="btn btn-primary">Comment</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


        